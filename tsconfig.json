{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "CommonJS",
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "tsup.config.ts"
  ],
  "exclude": ["node_modules"]
}
